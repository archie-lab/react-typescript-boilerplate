{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "jsx": "react",
    "removeComments": true,
    "charset": "utf-8",
    "lib": ["dom", "dom.iterable","es2018","es5", "es6", "es7", "es2017"],
    "baseUrl": ".",
    "rootDir": ".",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "./src/**/*"
    ]
  }
}
